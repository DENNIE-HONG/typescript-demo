{
    "compilerOptions": {
        "target": "es2018",
        "strict": false,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "resolveJsonModule": true,
        "module": "commonjs"
    },
    "exclude": ["node_modules"]
}
